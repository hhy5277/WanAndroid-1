<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <corners android:radius="@dimen/dp_18"/>

            <solid android:color="@color/colorPress"/>

            <stroke android:color="@color/colorPress"
                android:width="@dimen/dp_2"/>

        </shape>


    </item>

    <item>

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_18"/>

            <solid android:color="@color/translucence"/>

            <stroke android:color="@color/translucence"
                android:width="@dimen/dp_2"/>
        </shape>

    </item>



</selector>

