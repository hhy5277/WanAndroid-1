<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@mipmap/ic_launcher</item>-->
    </style>

    <!--Dialog风格-->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/colorNavBtmBackground</item>
    </style>


    <style name="SwitchTrack" parent="Theme.AppCompat.Light">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/colorTrackOpen</item>
        <!--关闭时颜色-->
        <item name="colorSwitchThumbNormal">@color/colorTrackClose</item>
        <!--关闭时的轨迹颜色-->
        <item name="android:colorForeground">@color/colorTrackClose</item>

    </style>

    <!--菜单风格-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar弹出菜单的风格-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <!--搜索界面的style-->
    <style name="SearchActivityStyle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <!--设置menu中item的图标颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--设置commit按钮和搜索按钮的图标-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="goIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <!-- 设置Toolbar标题字体的大小 -->
    <style name="CommonToolbarTitleSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <!--设置Toolbar标题与NavigationIcon的距离-->
    <style name="CommonToolbarDistance" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">@dimen/dp_0</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
    </style>

    <style name="MineFragmentTextStyle">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="MineFragmentConstaintStyle">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
    </style>

</resources>
